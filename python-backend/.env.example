# Study Tracker Backend Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=Study Tracker
APP_VERSION=1.0.0
DEBUG=true
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=study_tracker

# Security Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# Email Settings (for OTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Admin Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@studytracker.com
